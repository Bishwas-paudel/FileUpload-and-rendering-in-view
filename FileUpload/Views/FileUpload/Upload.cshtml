@model FileUploadModel

<h2>File Upload</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div>
        <label>Select a file:</label>
        <input asp-for="UploadedFile" type="file" />
    </div>
    <button type="submit">Upload</button>
</form>




@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
<center>
    <div class="rounded-circle"
         style="background-color: aliceblue; width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; border: 2px solid lightblue;">
        @if (TempData["photo"] != null)
        {
            @if (TempData["photo"] != null)
            {
                <img src="@TempData["photo"]" alt="Not Uploaded"
                     style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;" />
            }
            else
            {
                <span>No Image</span>
            }

        }
        else
        {
            <span>No Image</span>
        }
    </div>
</center>



</Center>